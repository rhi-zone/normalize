{
  "name": "moss-vscode",
  "displayName": "Moss",
  "description": "Moss code analysis and introspection for VS Code",
  "version": "0.1.0",
  "publisher": "moss",
  "repository": {
    "type": "git",
    "url": "https://github.com/rhi-zone/normalize"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "python",
    "typescript",
    "rust",
    "go",
    "analysis",
    "linter",
    "code quality"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:rust",
    "onLanguage:go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "moss.lint",
        "title": "Moss: Run Lint"
      },
      {
        "command": "moss.lintFix",
        "title": "Moss: Run Lint with Auto-fix"
      },
      {
        "command": "moss.showSkeleton",
        "title": "Moss: Show Code Skeleton"
      },
      {
        "command": "moss.analyzeHealth",
        "title": "Moss: Analyze Health"
      },
      {
        "command": "moss.viewTree",
        "title": "Moss: View Directory Tree"
      }
    ],
    "configuration": {
      "title": "Moss",
      "properties": {
        "moss.binaryPath": {
          "type": "string",
          "default": "moss",
          "description": "Path to the moss binary"
        },
        "moss.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Show moss lint violations as diagnostics"
        },
        "moss.runOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Run moss lint on file save"
        },
        "moss.lintCategories": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["linter", "formatter", "type-checker"]
          },
          "default": ["linter"],
          "description": "Categories of tools to run"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "moss.showSkeleton",
          "group": "moss"
        },
        {
          "command": "moss.lint",
          "group": "moss"
        }
      ],
      "explorer/context": [
        {
          "command": "moss.lint",
          "when": "explorerResourceIsFolder",
          "group": "moss"
        },
        {
          "command": "moss.viewTree",
          "when": "explorerResourceIsFolder",
          "group": "moss"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "oxlint src",
    "format": "oxfmt --write src",
    "typecheck": "tsgo --noEmit",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript/native-preview": "^7.0.0-dev.20251225.1",
    "oxfmt": "^0.20.0",
    "oxlint": "^0.16.0"
  }
}
