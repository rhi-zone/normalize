{
  "name": "normalize-vscode",
  "displayName": "Normalize",
  "description": "Normalize code analysis and introspection for VS Code",
  "version": "0.1.0",
  "publisher": "normalize",
  "repository": {
    "type": "git",
    "url": "https://github.com/rhi-zone/normalize"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "python",
    "typescript",
    "rust",
    "go",
    "analysis",
    "linter",
    "code quality"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:rust",
    "onLanguage:go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "normalize.lint",
        "title": "Normalize: Run Lint"
      },
      {
        "command": "normalize.lintFix",
        "title": "Normalize: Run Lint with Auto-fix"
      },
      {
        "command": "normalize.showSkeleton",
        "title": "Normalize: Show Code Skeleton"
      },
      {
        "command": "normalize.analyzeHealth",
        "title": "Normalize: Analyze Health"
      },
      {
        "command": "normalize.viewTree",
        "title": "Normalize: View Directory Tree"
      }
    ],
    "configuration": {
      "title": "Normalize",
      "properties": {
        "normalize.binaryPath": {
          "type": "string",
          "default": "normalize",
          "description": "Path to the normalize binary"
        },
        "normalize.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Show normalize lint violations as diagnostics"
        },
        "normalize.runOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Run normalize lint on file save"
        },
        "normalize.lintCategories": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["linter", "formatter", "type-checker"]
          },
          "default": ["linter"],
          "description": "Categories of tools to run"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "normalize.showSkeleton",
          "group": "normalize"
        },
        {
          "command": "normalize.lint",
          "group": "normalize"
        }
      ],
      "explorer/context": [
        {
          "command": "normalize.lint",
          "when": "explorerResourceIsFolder",
          "group": "normalize"
        },
        {
          "command": "normalize.viewTree",
          "when": "explorerResourceIsFolder",
          "group": "normalize"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "oxlint src",
    "format": "oxfmt --write src",
    "typecheck": "tsgo --noEmit",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript/native-preview": "^7.0.0-dev.20251225.1",
    "oxfmt": "^0.20.0",
    "oxlint": "^0.16.0"
  }
}
